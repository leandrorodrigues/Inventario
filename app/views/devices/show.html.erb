<%- model_class = Device -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @device.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_id) %>:</strong></dt>
  <dd><%= @device.item.number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_model_id) %>:</strong></dt>
  <dd><%= @device.device_model.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ip) %>:</strong></dt>
  <dd><%= @device.ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:host) %>:</strong></dt>
  <dd><%= @device.host %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @device.description %></dd>

  <dt><strong><%= t('Allocation') %>:</strong></dt>
  <dd>
    <%= @device.container_slots.first.container.title   %>
    <%= @device.container_slots.first.title   %>
   </dd>


</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              devices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_device_path(@device), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              device_path(@device),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
