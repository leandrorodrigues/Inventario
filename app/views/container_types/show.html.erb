<%- model_class = ContainerType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @container_type.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slots) %>:</strong></dt>
  <dd><%= @container_type.slots %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nested) %>:</strong></dt>
  <dd><%= @container_type.nested %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              container_types_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_container_type_path(@container_type), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              container_type_path(@container_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
